-- Área de Toggles
ToggleFrame.Name = "ToggleFrame"
ToggleFrame.Parent = Frame
ToggleFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ToggleFrame.Position = UDim2.new(0, 0, 0, 120)
ToggleFrame.Size = UDim2.new(1, 0, 1, -160)

-- Funções dos Toggles
local function createToggle(name, icon, parent, position)
    local toggle = Instance.new("TextButton")
    toggle.Name = name
    toggle.Parent = parent
    toggle.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    toggle.Position = position
    toggle.Size = UDim2.new(1, -10, 0, 40)
    toggle.Font = Enum.Font.Gotham
    toggle.Text = name
    toggle.TextColor3 = Color3.fromRGB(255, 255, 255)
    toggle.TextSize = 16
    toggle.TextStrokeTransparency = 0.8
    toggle.AutoButtonColor = false
    toggle.MouseButton1Click:Connect(function()
        if toggle.BackgroundColor3 == Color3.fromRGB(60, 60, 60) then
            toggle.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
            -- Ativar a funcionalidade
        else
            toggle.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
            -- Desativar a funcionalidade
        end
    end)
    return toggle
end

createToggle("Farm Bones", "icon1", ToggleFrame, UDim2.new(0, 5, 0, 5))
createToggle("Auto Race", "icon2", ToggleFrame, UDim2.new(0, 5, 0, 50))
createToggle("Auto Sword", "icon3", ToggleFrame, UDim2.new(0, 5, 0, 95))
createToggle("Auto Raid", "icon4", ToggleFrame, UDim2.new(0, 5, 0, 140))
createToggle("Auto Fruit", "icon5", ToggleFrame, UDim2.new(0, 5, 0, 185))
