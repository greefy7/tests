"use client"

import { useState } from "react"
import Link from "next/link"
import { Button } from "@/components/ui/button"
import { Tabs, TabsList, TabsTrigger, TabsContent } from "@/components/ui/tabs"
import { Card } from "@/components/ui/card"
import { toast } from "react-toastify"

// Import icons (substitua pelos Ã­cones reais)
import MinimizeIcon from "@/components/icons/MinimizeIcon"
import GhostLogo from "@/components/icons/GhostLogo"
import FarmIcon from "@/components/icons/FarmIcon"
import RaidIcon from "@/components/icons/RaidIcon"
import FruitIcon from "@/components/icons/FruitIcon"

export default function TsuoHub() {
  const [autoFarmActive, setAutoFarmActive] = useState(false)
  const [autoRaceActive, setAutoRaceActive] = useState(false)
  const [autoSwordActive, setAutoSwordActive] = useState(false)
  const [autoRaidActive, setAutoRaidActive] = useState(false)
  const [autoFruitActive, setAutoFruitActive] = useState(false)

  const handleToggle = (setter, isActive, label) => {
    setter(!isActive)
    if (!isActive) {
      toast.success(`${label} Activated`)
    } else {
      toast.error(`${label} Deactivated`)
    }
  }

  return (
    <div className="relative flex h-[600px] w-[800px] flex-col rounded-2xl bg-gradient-to-br from-[#4A148C] to-[#AB47BC] shadow-2xl">
      <div className="flex h-12 items-center justify-between rounded-t-2xl bg-[#2c2c2c] px-4">
        <div className="flex items-center gap-2 text-white">
          <GhostLogo className="h-6 w-6" />
          <h1 className="text-lg font-semibold">TsuoHub</h1>
          <p className="text-sm text-gray-400">by Tsuoscripts</p>
        </div>
        <div className="flex items-center gap-2">
          <Link href="#" target="_blank" className="text-white hover:text-gray-300">
            <DiscIcon className="h-6 w-6" />
          </Link>
          <Button variant="ghost" size="icon" className="text-white hover:bg-[#3c3c3c]">
            <MinimizeIcon className="h-6 w-6" />
          </Button>
        </div>
      </div>
      <div className="flex-1 overflow-hidden">
        <Tabs defaultValue="scriptHub" className="h-full">
          <TabsList className="flex h-12 items-center justify-between bg-[#2c2c2c] px-4">
            <TabsTrigger
              value="scriptHub"
              className="flex items-center gap-2 rounded-t-lg px-4 py-2 text-white transition-colors hover:bg-[#3c3c3c] data-[state=active]:bg-[#1e1e1e]"
            >
              <FarmIcon className="h-6 w-6" />
              ScriptHub
            </TabsTrigger>
            <TabsTrigger
              value="bloxFruits"
              className="flex items-center gap-2 rounded-t-lg px-4 py-2 text-white transition-colors hover:bg-[#3c3c3c] data-[state=active]:bg-[#1e1e1e]"
            >
              <FruitIcon className="h-6 w-6" />
              Blox Fruits
            </TabsTrigger>
          </TabsList>
          <TabsContent value="scriptHub">
            <Card>
              <div className="flex flex-col gap-4">
                <ToggleButton
                  label="Farm Bones"
                  icon={<FarmIcon className="h-6 w-6" />}
                  isActive={autoFarmActive}
                  onClick={() => handleToggle(setAutoFarmActive, autoFarmActive, "Farm Bones")}
                />
                <ToggleButton
                  label="Auto Race"
                  icon={<FarmIcon className="h-6 w-6" />}
                  isActive={autoRaceActive}
                  onClick={() => handleToggle(setAutoRaceActive, autoRaceActive, "Auto Race")}
                />
                <ToggleButton
                  label="Auto Sword"
                  icon={<FarmIcon className="h-6 w-6" />}
                  isActive={autoSwordActive}
                  onClick={() => handleToggle(setAutoSwordActive, autoSwordActive, "Auto Sword")}
                />
                <ToggleButton
                  label="Auto Raid"
                  icon={<RaidIcon className="h-6 w-6" />}
                  isActive={autoRaidActive}
                  onClick={() => handleToggle(setAutoRaidActive, autoRaidActive, "Auto Raid")}
                />
                <ToggleButton
                  label="Auto Fruit"
                  icon={<FruitIcon className="h-6 w-6" />}
                  isActive={autoFruitActive}
                  onClick={() => handleToggle(setAutoFruitActive, autoFruitActive, "Auto Fruit")}
                />
              </div>
            </Card>
          </TabsContent>
          <TabsContent value="bloxFruits">
            <Card>
              {/* Blox Fruits related content */}
            </Card>
          </TabsContent>
        </Tabs>
      </div>
    </div>
  )
}

// Componente ToggleButton
function ToggleButton({ label, icon, isActive, onClick }) {
  return (
    <Button 
      onClick={onClick}
      className={`flex items-center gap-2 p-4 ${isActive ? 'bg-green-600' : 'bg-red-600'} rounded-lg text-white`}
    >
      {icon}
      {label}
    </Button>
  )
}
